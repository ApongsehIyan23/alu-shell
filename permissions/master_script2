#!/bin/bash


echo "Updating script contents for questions 9-16..."

# --- Script 9: John Doe ---
cat <<'EOF' > 9-John_Doe
#!/bin/bash
chmod 753 hello
EOF

# --- Script 10: Look in the mirror ---
cat <<'EOF' > 10-mirror_permissions
#!/bin/bash
chmod --reference=olleh hello
EOF

# --- Script 11: Directories ---
cat <<'EOF' > 11-directories_permissions
#!/bin/bash
find . -type d -exec chmod a+x {} \;
EOF

# --- Script 12: More directories ---
cat <<'EOF' > 12-directory_permissions
#!/bin/bash
mkdir -m 751 my_dir
EOF

# --- Script 13: Change group ---
cat <<'EOF' > 13-change_group
#!/bin/bash
chgrp school hello
EOF

# --- Script 14: Owner and group ---
cat <<'EOF' > 14-change_owner_and_group
#!/bin/bash
chown vincent:staff *
EOF

# --- Script 15: Symbolic links ---
cat <<'EOF' > 15-symbolic_link_permissions
#!/bin/bash
chown -h vincent:staff _hello
EOF

# --- Script 16: If only ---
cat <<'EOF' > 16-if_only
#!/bin/bash
if [ "$(stat -c '%U' hello)" = "guillaume" ]; then
    chown vincent hello
fi
EOF

echo "Scripts 9-16 have been successfully populated with their commands."

#!/bin/bash

# This script writes the correct commands into the existing script files.

echo "Populating scripts for questions 15-22..."

# --- Script 15: Count that word ---
cat <<'EOF' > 15-countthatword
#!/bin/bash
grep "bin" /etc/passwd | wc -l
EOF

# --- Script 16: What's next? ---
cat <<'EOF' > 16-whatsnext
#!/bin/bash
grep -A 3 "root" /etc/passwd
EOF

# --- Script 17: I hate bins ---
cat <<'EOF' > 17-hidethisword
#!/bin/bash
grep -v "bin" /etc/passwd
EOF

# --- Script 18: Letters only please ---
cat <<'EOF' > 18-letteronly
#!/bin/bash
grep -E '^[A-Za-z]' /etc/ssh/sshd_config
EOF

# --- Script 19: A to Z ---
cat <<'EOF' > 19-AZ
#!/bin/bash
tr 'Ac' 'Ze'
EOF

# --- Script 20: Without C, you would live in hiago ---
cat <<'EOF' > 20-hiago
#!/bin/bash
tr -d 'cC'
EOF

# --- Script 21: esreveR ---
cat <<'EOF' > 21-reverse
#!/bin/bash
rev
EOF

# --- Script 22: DJ Cut Killer ---
cat <<'EOF' > 22-users_and_homes
#!/bin/bash
cut -d: -f1,6 /etc/passwd | sort
EOF

echo "Scripts 15-22 have been successfully populated."

